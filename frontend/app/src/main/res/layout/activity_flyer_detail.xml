<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 이미지 슬라이더 -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerImages"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <!-- 페이지 인디케이터 (추후 사용 가능) -->
            <TextView
                android:id="@+id/tvImageIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/3"
                android:textColor="@android:color/white"
                android:background="#80000000"
                android:layout_margin="8dp"
                android:padding="4dp"
                android:layout_gravity="top|end"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <!-- 태그들 -->
            <LinearLayout
                android:id="@+id/layTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="start">

                <!-- 동적으로 Chip/TextView 추가 예정 -->
            </LinearLayout>

            <!-- 상호명 및 주소 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivMarketThumb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_thumbnail"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/tvMarketName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="해로상회"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvMarketAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="경기 시흥시 산기대학로 237"
                        android:textSize="13sp"
                        android:textColor="#666666" />
                </LinearLayout>
            </LinearLayout>

            <!-- 상품명 및 가격 -->
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="토마토 8개"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6,000원"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:paddingHorizontal="16dp"
                android:paddingTop="4dp" />

            <!-- 관심 및 유효기간 -->
            <TextView
                android:id="@+id/tvInterest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이 전단지에 4명이 관심을 갖고 있어요"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:paddingTop="12dp" />

            <TextView
                android:id="@+id/tvExpiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="유효기간 3일 남음"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- 하단 네비게이션 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
