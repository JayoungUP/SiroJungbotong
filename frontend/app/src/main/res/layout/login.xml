<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- ← 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_back"
        android:background="@null"
        android:contentDescription="뒤로가기" />

    <!-- 로그인 제목 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="로그인"
        android:textSize="28sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="@font/helvetica_bold" />

    <!-- 설명 텍스트 -->
    <TextView
        android:id="@+id/tv_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입한 아이디와 비밀번호를\n입력해주세요."
        android:textSize="16sp"
        android:textColor="#888888"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/helvetica_bold" />

    <!-- 카카오 로그인 버튼 -->
    <ImageButton
        android:id="@+id/btn_kakao_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/kakao_button"
        android:background="@null"
        android:contentDescription="카카오로 시작하기"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <!-- "아이디" 라벨 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/helvetica_bold" />

    <!-- 아이디 입력 -->
    <EditText
        android:id="@+id/edit_id"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="아이디를 입력해주세요"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#CCCCCC"
        android:inputType="text"
        android:fontFamily="@font/helvetica_bold"
        android:theme="@style/NoUnderlineEditText"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <!-- "비밀번호" 라벨 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/helvetica_bold" />

    <!-- 비밀번호 입력 + 눈 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_text_background">

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="비밀번호를 입력해주세요"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:paddingEnd="48dp"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC"
            android:fontFamily="@font/helvetica_bold"
            android:theme="@style/NoUnderlineEditText" />

        <ImageButton
            android:id="@+id/btn_toggle_pw"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:padding="12dp"
            android:src="@drawable/ic_eye"
            android:contentDescription="비밀번호 보기 전환" />
    </RelativeLayout>

    <!-- 아이디/비번 찾기 -->
    <LinearLayout
        android:id="@+id/layout_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_find_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:textColor="#888888"
            android:textSize="14sp"
            android:fontFamily="@font/helvetica_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  |  "
            android:textColor="#CCCCCC"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_find_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textColor="#888888"
            android:textSize="14sp"
            android:fontFamily="@font/helvetica_bold" />
    </LinearLayout>

    <!-- 로그인 버튼 -->
    <ImageButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="로그인 하기"
        android:scaleType="fitCenter"
        android:src="@drawable/login_button" />

</LinearLayout>
