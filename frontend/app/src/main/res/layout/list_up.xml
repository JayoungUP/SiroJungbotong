                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etItemName3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:fontFamily="@font/helvetica_bold"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvItemDescLabel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_item_desc"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/gray01" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilItemDesc3"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    android:hint="@string/hint_item_desc">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etItemDesc3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:textSize="16sp"
                        android:fontFamily="@font/helvetica_bold"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvPriceLabel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_price"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/gray01" />
                <LinearLayout
                    android:id="@+id/layoutPrice3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPrice3"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hint_price">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPrice3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="16sp"
                            android:fontFamily="@font/helvetica_bold"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tvUnitWon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_won"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/helvetica_bold"
                        android:textColor="@color/gray01" />

                    <CheckBox
                        android:id="@+id/cbUseNow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        android:text="@string/use_now_marker"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/helvetica_bold"
                        android:textColor="@color/gray01" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvValidPeriodLabel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_valid_period"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/gray01" />
                <LinearLayout
                    android:id="@+id/layoutValidPeriod3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilStartDate3"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hint_start_date"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/deadline">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etStartDate3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:textSize="16sp"
                            android:fontFamily="@font/helvetica_bold"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tvTilde3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/separator_tilde"
                        android:textSize="18sp"
                        android:fontFamily="@font/helvetica_bold"
                        android:textColor="@color/gray01"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEndDate3"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hint_end_date"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/deadline">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEndDate3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:textSize="16sp"
                            android:fontFamily="@font/helvetica_bold"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvItemPhotoLabel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_item_photo"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/gray01" />
                <FrameLayout
                    android:id="@+id/layoutItemPhoto3"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_upload_border"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">
                        <ImageView
                            android:id="@+id/ivItemPhotoIcon3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/addimage" />
                        <TextView
                            android:id="@+id/tvItemPhotoGuidance3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/hint_upload_item_photo"
                            android:textSize="14sp"
                            android:fontFamily="@font/helvetica_bold"
                            android:textColor="@color/gray02" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/ivItemPhotoPreview3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>
                </FrameLayout>
            </LinearLayout>

            <!-- + 품목 추가하기 버튼 -->
            <TextView
                android:id="@+id/tvAddItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_add_item"
                android:textSize="16sp"
                android:fontFamily="@font/helvetica_bold"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="right"
                android:layout_marginTop="24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
